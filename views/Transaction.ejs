<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>History</title>
    <%- include('partials/logo') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background-color: #f0f4f8; /* Light grey background for better contrast */
            font-family: "Open Sans", sans-serif; /* Consistent font */
        }

        .headerName {
            color: rgba(0, 35, 122, 0.9);
            font-size: 40px; /* Increased font size for header */
            text-align: center; /* Centering the header */
            margin: 20px 0; /* Spacing above and below the header */
            text-transform: uppercase;
            font-weight: 700; /* Bold text for header */
        }

        .card {
            background-color: rgba(255, 255, 255, 0.9); /* Slightly transparent white background for card */
            border-radius: 15px; /* Rounded corners */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
            padding: 2rem; /* Padding inside the card */
            margin: 20px auto; /* Centering the card */
        }

        .table {
            border-radius: 10px; /* Rounded corners for the table */
            overflow: hidden; /* To avoid overflow of the rounded corners */
        }

        .table th {
            background-color: rgba(0, 35, 122, 0.8); /* Darker header color */
            color: white; /* White text for header */
            border: none; /* Remove border */
        }

        .table tbody tr {
            transition: background-color 0.3s, transform 0.3s; /* Smooth transition for hover effect */
        }

        .table tbody tr:hover {
            background-color: rgba(0, 35, 122, 0.1); /* Light background on hover */
            transform: scale(1.02); /* Slightly scale the row on hover */
        }

        .table tbody tr.buy {
            background-color: rgba(76, 175, 80, 0.1); /* Light green for buy */
        }

        .table tbody tr.buy:hover {
            background-color: rgba(76, 175, 80, 0.3); /* Darker green on hover for buy */
        }

        .table tbody tr.sell {
            background-color: rgba(244, 67, 54, 0.1); /* Light red for sell */
        }

        .table tbody tr.sell:hover {
            background-color: rgba(244, 67, 54, 0.3); /* Darker red on hover for sell */
        }

        .stock-image {
            width: 40px; /* Adjust width */
            height: 40px; /* Adjust height */
            border-radius: 50%; /* Round image */
            object-fit: cover; /* Maintain aspect ratio */
            margin-right: 10px; /* Spacing between image and text */
        }

        .back-button {
            width: 100%; /* Full width */
            background-color: #272727; /* Consistent button color */
            color: white; /* White text */
            border: none; /* No border */
            padding: 10px; /* Padding */
            border-radius: 5px; /* Rounded edges */
            cursor: pointer; /* Pointer cursor */
            transition: background-color 0.3s; /* Smooth transition for hover */
            text-align: center; /* Center text */
            margin-top: 20px; /* Space above button */
            font-weight: bold; /* Bold text */
        }

        .back-button:hover {
            background-color: rgba(0, 35, 122, 0.9); /* Change background on hover */
            color: white; /* White text on hover */
        }

        .type-badge {
            display: inline-block; /* Inline block for spacing */
            padding: 0.4em 0.7em; /* Increased padding for badge */
            border-radius: 12px; /* Rounded corners for badge */
            font-weight: bold; /* Bold text */
            text-transform: capitalize; /* Capitalize type */
            color: white; /* White text for badge */
            font-size: 0.9em; /* Slightly smaller font size */
        }

        .type-badge.buy {
            background-color: #4CAF50; /* Green for buy */
        }

        .type-badge.sell {
            background-color: #F44336; /* Red for sell */
        }
    </style>
</head>

<body>
    <%- include('partials/navbar') %>
    <div class="container">
        <h1 class="headerName">Transaction History</h1>
        <div class="card text-center">
            <table class="table align-middle mb-0">
                <thead>
                    <tr>
                        <th class="text-center">Stock Name</th>
                        <th>Quantity</th>
                        <th>Type</th>
                        <th>Date</th>
                        <th>Purchase Price</th>
                        <th>Total Value</th>
                    </tr>
                </thead>
                <tbody>
                    <% transaction.forEach(e => { %>
                        <tr class="<%= e.type.toLowerCase() %>"> <!-- Class for type styling -->
                            <td class="stock-name text-center"> <!-- Centering the stock name -->
                                <div class="d-flex align-items-center justify-content-center">
                                    <img src="<%= e.Stock.imgUrl %>" alt="<%= e.Stock.formattedName %>" class="stock-image">
                                    <span class="ms-3 fw-bold"><%= e.Stock.formattedName %></span>
                                </div>
                            </td>
                            <td><%= e.totalStock %></td>
                            <td>
                                <span class="type-badge <%= e.type.toLowerCase() %>"><%= e.type %></span> <!-- Badge for type -->
                            </td>
                            <td><%= e.date %></td> <!-- Correct date variable -->
                            <td><%= currency(e.Stock.price) %></td>
                            <td><%= currency(e.price * e.totalStock) %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            <button class="back-button" onclick="window.location.href='/user'">Back to Profile</button> <!-- Centered back button -->
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>
