<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <%- include('partials/logo') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background: linear-gradient(to right, #f0f4f8, #e0e6ed); /* Gradient background */
            font-family: "Open Sans", sans-serif; /* Font for consistency */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Full height */
            margin: 0; /* Remove default margin */
        }

        .card {
            border-radius: 20px; /* Rounded corners for the card */
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Shadow for depth */
        }

        .btn-color {
            background-color: #0e1c36;
            color: #fff;
            transition: background-color 0.3s ease, transform 0.3s ease; /* Smooth transition */
        }

        .btn-color:hover {
            background-color: #0a1626; /* Darker shade on hover */
            transform: translateY(-2px); /* Lift effect on hover */
        }

        .profile-image-pic {
            height: 200px;
            width: 200px;
            object-fit: cover;
            border-radius: 50%; /* Circular image */
        }

        .cardbody-color {
            background-color: #ebf2fa; /* Light card background */
        }

        .form-control {
            border-radius: 10px; /* Rounded corners for inputs */
            box-shadow: 0 1px 5px rgba(0, 0, 0, 0.1); /* Shadow for inputs */
        }

        a {
            text-decoration: none;
        }

        .text-center {
            margin-bottom: 20px; /* Spacing below the button */
        }

        #emailHelp {
            margin-top: 15px; /* Space above help text */
            font-size: 17px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h2 class="text-center text-dark mt-5">Login</h2>
                <div class="card my-5">
                    <form class="card-body cardbody-color p-lg-5" action="/login" method="post">
                        <div class="text-center">
                            <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail my-3" alt="profile">
                        </div>
                        <div class="mb-3">
                            <input name="email" type="email" class="form-control" id="Username" placeholder="Email" required>
                        </div>
                        <div class="mb-3">
                            <input name="password" type="password" class="form-control" id="password" placeholder="Password" required>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-color px-5 mb-5 w-100">Login</button>
                        </div>
                        <div id="emailHelp" class="form-text text-center mb-5 text-dark">Not Registered? 
                            <a href="/register" class="text-dark fw-bold"> Create an Account</a>
                        </div>
                        <% if (error != undefined) { %>
                            <p style="color: red; text-align: center;"><%= error %></p>
                        <% } %>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
