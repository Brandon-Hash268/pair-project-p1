<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Your Stocks</title>
    <%- include('partials/logo') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background-color: #f0f4f8; /* Light grey background for better contrast */
            font-family: "Open Sans", sans-serif; /* Consistent font */
        }
        .headerName {
            color: rgba(0, 35, 122, 0.9);
            font-size: 40px; /* Increased font size for header */
            text-align: center; /* Centering the header */
            margin: 20px 0; /* Spacing above and below the header */
            text-transform: uppercase;
        }
        .card {
            background-color: rgba(255, 255, 255, 0.9); /* Slightly transparent white background for card */
            border-radius: 15px; /* Rounded corners */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
            padding: 2rem; /* Padding inside the card */
            margin: 20px auto; /* Centering the card */
        }
        .table th {
            background-color: rgba(0, 35, 122, 0.8); /* Darker header color */
            color: white; /* White text for header */
        }
        .table tbody tr {
            transition: background-color 0.3s; /* Smooth transition for hover effect */
        }
        .table tbody tr:hover {
            background-color: rgba(0, 35, 122, 0.1); /* Light background on hover */
        }
        .stock-image {
            width: 40px; /* Adjust width */
            height: 40px; /* Adjust height */
            border-radius: 50%; /* Round image */
            object-fit: cover; /* Maintain aspect ratio */
            margin-right: 10px; /* Spacing between image and text */
        }
        .back-button {
            width: 100%; /* Full width */
            background-color: #272727; /* Consistent button color */
            color: white; /* White text */
            border: none; /* No border */
            padding: 10px; /* Padding */
            border-radius: 5px; /* Rounded edges */
            cursor: pointer; /* Pointer cursor */
            transition: background-color 0.3s; /* Smooth transition for hover */
            text-align: center; /* Center text */
            margin-top: 20px; /* Space above button */
        }
        .back-button:hover {
            background-color: rgba(0, 35, 122, 0.9); /* Change background on hover */
            color: white; /* White text on hover */
        }
        .text-center {
            text-align: center; /* Center align text */
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container">
        <h1 class="headerName">Your Stocks</h1>
        <div class="card text-center">
            <table class="table align-middle mb-0">
                <thead>
                    <tr>
                        <th class="text-center">Stock Name</th>
                        <th>Quantity</th>
                        <th>Purchase Price</th>
                        <th>Total Value</th>
                    </tr>
                </thead>
                <tbody>
                    <% portofolio.forEach(e => { %>
                        <tr>
                            <td class="stock-name text-center"> <!-- Centering the stock name -->
                                <div class="d-flex align-items-center justify-content-center">
                                    <img src="<%= e.Stock.imgUrl %>" alt="<%= e.Stock.formattedName %>" class="stock-image">
                                    <span class="ms-3 fw-bold"><%= e.Stock.formattedName %></span>
                                </div>
                            </td>
                            <td><%= e.totalStock %></td>
                            <td><%= currency(e.Stock.price) %></td>
                            <td><%= currency(e.totalValue) %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            <button class="back-button" onclick="window.location.href='/profile'">Back to Profile</button> <!-- Centered back button -->
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
